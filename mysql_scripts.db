-- Inventory
CREATE TABLE IF NOT EXISTS `inventory` (
	`id` int(11) NOT NULL AUTO_INCREMENT,
  	`product_name` varchar(50) NOT NULL,
  	`quantity` int(11) NOT NULL,
    PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;

